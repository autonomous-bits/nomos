{
    "github.copilot.chat.commitMessageGeneration.instructions": [
        {
            "file": ".github/instructions/commit-messages.instructions.md"
        }
    ],
    "github.copilot.chat.pullRequestDescriptionGeneration.instructions": [
        {
            "file": ".github/instructions/pull-request-description.instructions.md"
        }
    ],
    "github.copilot.chat.summarizeAgentConversationHistory.enabled": true,
    "chat.promptFilesRecommendations": {
        "speckit.constitution": true,
        "speckit.specify": true,
        "speckit.plan": true,
        "speckit.tasks": true,
        "speckit.implement": true
    },
    "chat.tools.terminal.autoApprove": {
        ".specify/scripts/bash/": true,
        ".specify/scripts/powershell/": true
    },
    "yaml.schemas": {
        "https://json.schemastore.org/golangci-lint.json": ".golangci.yml"
    },
    "gopls": {
        "build.buildFlags": [
            "-tags=integration"
        ]
    },
    "makefile.configureOnOpen": false
}
