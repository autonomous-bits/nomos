# =====================================================
# Database Configuration Section
# =====================================================
# Connection settings for the primary database
# Supports PostgreSQL, MySQL, and SQLite
database:
	host: localhost
	port: 5432
	# username: admin
	# password: secret
	database: production_db
	# max_connections: 100
	# timeout: 30
	ssl_enabled: true

# =====================================================
# API Configuration
# =====================================================
# External API integration settings
# Endpoints must use HTTPS in production
#
# Rate limiting: 1000 requests/hour
# Timeout: 30 seconds default
api-config:
	# base_url: http://legacy-api.example.com
	base_url: https://api.example.com
	# Comment between active keys
	timeout: 30
	# retry_attempts: 3
	# retry_delay: 1000
	api_key: production-key-12345
	# test_api_key: test-key-67890
	rate_limit: 1000

# Cache Configuration
# Memory-based caching for performance optimization
cache:
	enabled: true
	# disabled_cache: false
	ttl: 3600
	# Comment in middle of section
	max_size: 1024
	# max_items: 10000
	# eviction_policy: lru

#
# Empty comment lines above and below
