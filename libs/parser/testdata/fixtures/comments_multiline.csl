# =====================================================
# Feature Flags
# =====================================================
# Toggles for experimental and beta features
# 
# WARNING: Changing flags may require restart
# Last updated: 2026-01-18
#
# Available flags:
#   - new_ui: Enable redesigned user interface
#   - beta_api: Enable beta API endpoints  
#   - analytics: Enable usage analytics
#   - debug_mode: Enable debug logging
features:
	new_ui: enabled
	# old_ui: disabled
	# legacy_mode: false
	beta_api: disabled
	# alpha_features: disabled
	analytics: enabled
	# debug_mode: false
	# verbose_logging: false
	experimental_cache: false

# Logging Configuration
# Controls application logging behavior
#
# Valid levels: DEBUG, INFO, WARN, ERROR, FATAL
# Valid formats: json, text, structured
logging:
	level: INFO
	# level: DEBUG
	format: json
	# format: text
	output: /var/log/app.log
	# output: stdout
	# max_file_size: 100MB
	# max_backups: 10
	rotation: daily

