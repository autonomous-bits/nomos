source:
	alias: 'azure'
	type:  'azure'
	path:  './providers/azure'

infrastructure:
	vpc:
		cidr: '10.0.0.0/16'
		region: @base:config:config.region
	vpc_cidr_ref: @network:config:vpc.cidr
	security-groups:
		web:
			ingress:
				port: 80
				protocol: 'tcp'
		database:
			ingress:
				port: 5432
				protocol: 'tcp'

application:
	name: 'my-app'
	version: '1.0.0'
	replicas: 3
