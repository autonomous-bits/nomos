source:
	alias: 'network'
	type: 'folder'
	path: './config'

source:
	alias: 'app'
	type: 'folder'
	path: './app-config'

config:
	primary_host: @network:config.vpc.cidr
	backup_hosts:
		backup1: @network:config.backup1.host
		static_backup: 'static-backup.example.com'
		backup2: @network:config.backup2.host
	settings:
		timeout: '30s'
		retry_count: '3'
		endpoint: @app:config.api.endpoint
		nested:
			deep_ref: @network:config.deep.nested.value
			literal: 'literal-value'
	tags:
		env: 'production'
		app_tag: @app:config.tags.environment
		region: 'us-west-2'


