source:
	alias: 'network'
	type: 'folder'
	path: './config'

source:
	alias: 'app'
	type: 'folder'
	path: './app-config'

config:
	primary_host: @network:vpc.cidr
	backup_hosts:
		backup1: @network:backup1.host
		static_backup: 'static-backup.example.com'
		backup2: @network:backup2.host
	settings:
		timeout: '30s'
		retry_count: '3'
		endpoint: @app:api.endpoint
		nested:
			deep_ref: @network:deep.nested.value
			literal: 'literal-value'
	tags:
		env: 'production'
		app_tag: @app:tags.environment
		region: 'us-west-2'


