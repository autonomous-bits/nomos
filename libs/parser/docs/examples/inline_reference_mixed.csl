# Mixed Literals and Inline References
#
# This example demonstrates mixing string literals and inline references
# within the same section. This is the most common real-world pattern.

source:
	alias: 'config'
	type: 'folder'
	path: './app-config'

source:
	alias: 'secrets'
	type: 'vault'
	path: './secrets'

application:
	name: 'my-application'
	version: '1.0.0'
	database_url: @config:config:database.connection_string
	debug_mode: 'false'
	log_level: 'info'
	api_key: @secrets:config:third_party.api_key
	max_connections: '100'
	timeout_seconds: '30'
	cache_ttl: @config:config:cache.ttl_seconds

deployment:
	environment: 'production'
	region: @config:config:aws.region
	instance_type: 't3.medium'
	vpc_id: @config:config:aws.vpc_id
	subnet_ids: @config:config:aws.subnet_ids
	security_group: @secrets:config:aws.security_group_id
