source:
  alias: 'configs'
  type:  'autonomous-bits/nomos-provider-file'
  version: '0.1.1'
  directory: './data'

environments:
  production_full: @configs:prod.database
  staging_full: @configs:staging.database
  production_db_name: @configs:prod.database.name
  staging_db_name: @configs:staging.database.name
  production:
    database_name: @configs:prod.database.name
    host: @configs:prod.database.host
  staging:
    database_name: @configs:staging.database.name
    host: @configs:staging.database.host

app:
  name: 'example-app'
