source:
  alias: 'configs'
  type:  'autonomous-bits/nomos-provider-file'
  version: '0.1.1'
  directory: './data'

source:
  alias: 'tfstate'
  type:  'autonomous-bits/nomos-provider-terraform-remote-state'
  version: '0.1.2'
  backend_type: 'azurerm'
  storage_account_name: "wstofustate"
  container_name: "tfstate"
  key: "storage.tfstate"

source:
  alias: 'networkstate'
  type:  'autonomous-bits/nomos-provider-terraform-remote-state'
  version: '0.1.2'
  backend_type: 'azurerm'
  storage_account_name: "wstofustate"
  container_name: "tfstate"
  key: "network.tfstate"

environments:
  production: @configs:prod:database.name
  staging: @configs:staging:database.name

app:
  name: 'example-app'
  url: @tfstate:blob_url
  network:
    vnet_name: @networkstate:virtual_network_name